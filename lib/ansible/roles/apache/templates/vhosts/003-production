<VirtualHost *:80>
    ServerAdmin webmaster@localhost

    ServerName {{ domain }}

    ServerAlias www.{{ domain }}
    ServerAlias production.{{ domain }}

    DocumentRoot /var/www/{{ domain }}/production/master/current/web
    <Directory />
        Options FollowSymLinks
        AllowOverride None
    </Directory>
    <Directory /var/www/{{ domain }}/production/master/current/web/>
        Options Indexes FollowSymLinks MultiViews
        AllowOverride All
{% if apache_version.stdout == '2.2' %}
        Order allow,deny
        Allow from all
{% elif apache_version.stdout == '2.4' %}
        Require all granted
{% endif %}
    </Directory>

    LogLevel warn

    ErrorLog ${APACHE_LOG_DIR}/production.{{ domain }}-error.log
    CustomLog ${APACHE_LOG_DIR}/production.{{ domain }}-access.log combined
</VirtualHost>
