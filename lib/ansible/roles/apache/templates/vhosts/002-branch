<VirtualHost *:80>
    ServerAdmin webmaster@localhost

    ServerName staging.{{ domain }}

    ServerAlias *.staging.{{ domain }}

    VirtualDocumentRoot /var/www/{{ domain }}/staging/%1/current/web
    <Directory />
        Options FollowSymLinks
        AllowOverride None
    </Directory>
    <Directory /var/www/{{ domain }}/>
        Options Indexes FollowSymLinks MultiViews
        AllowOverride All
{% if apache_version.stdout == '2.2' %}
        Order allow,deny
        Allow from all
{% elif apache_version.stdout == '2.4' %}
        Require all granted
{% endif %}
    </Directory>

    LogLevel warn

    ErrorLog ${APACHE_LOG_DIR}/branch.{{ domain }}-error.log
    CustomLog ${APACHE_LOG_DIR}/branch.{{ domain }}-access.log combined

    php_flag display_startup_errors on
    php_flag display_errors on

    php_value error_reporting -1
    php_value scream.enabled 1
</VirtualHost>
